# Application Settings
APP_NAME="Medical Symptom Constellation Mapper"
APP_VERSION="0.2.0"
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
# REQUIRED: Generate a strong secret key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
# MUST be at least 32 characters long
SECRET_KEY=CHANGEME_GENERATE_SECURE_SECRET_KEY_AT_LEAST_32_CHARS_LONG
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
# Comma-separated list of allowed origins (wildcards not allowed for security)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100  # requests per minute
RATE_LIMIT_PERIOD=60     # seconds

# Database Configuration
# PRIMARY DATABASE: Set to "qdrant" to use Qdrant as main database (recommended)
# or "postgresql" for legacy PostgreSQL support
PRIMARY_DATABASE=qdrant

# Qdrant Vector Database (PRIMARY DATABASE - stores all data with embeddings)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=medical_conditions

# PostgreSQL Database (LEGACY - OPTIONAL)
# Only needed if PRIMARY_DATABASE=postgresql
# Format: postgresql://USERNAME:PASSWORD@HOST:PORT/DATABASE
# For local development (when running API outside Docker, databases in Docker)
DATABASE_URL=postgresql://CHANGEME_DB_USER:CHANGEME_DB_PASSWORD@localhost:5432/doctor_ai
# For Docker Compose (when running API inside Docker)
# DATABASE_URL=postgresql://CHANGEME_DB_USER:CHANGEME_DB_PASSWORD@postgres:5432/doctor_ai
DATABASE_ECHO=False

# Redis Cache (Optional - set REDIS_ENABLED=True to enable)
REDIS_ENABLED=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ML Models
EMBEDDING_MODEL=microsoft/BiomedNLP-PubMedBERT-base-uncased-abstract-fulltext
EMBEDDING_DIMENSION=768
MAX_SEQUENCE_LENGTH=512

# AI Assistant Configuration
# Option 1: Use OpenAI directly
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-CHANGEME_YOUR_OPENAI_API_KEY_HERE

# Option 2: Use OpenRouter (supports multiple AI providers including OpenAI)
# Get your API key from: https://openrouter.ai/keys
USE_OPENROUTER=False
OPENROUTER_API_KEY=sk-or-v1-CHANGEME_YOUR_OPENROUTER_API_KEY_HERE
# Available models: openai/gpt-4-turbo-preview, openai/gpt-3.5-turbo, anthropic/claude-3-opus, etc.
OPENROUTER_MODEL=openai/gpt-4-turbo-preview

# Option 3: Use local LLM (Ollama)
USE_LOCAL_LLM=False
LOCAL_LLM_MODEL=llama2

# Medical Ontology
USE_SNOMED_CT=True
USE_ICD10=True
USE_HPO=True

# Confidence Thresholds
TIER1_CONFIDENCE_THRESHOLD=0.85
TIER2_CONFIDENCE_THRESHOLD=0.60
TIER3_CONFIDENCE_THRESHOLD=0.40

# Search Parameters
TOP_K_CANDIDATES=50
FINAL_RESULTS_LIMIT=10

# HIPAA Compliance
ENABLE_AUDIT_LOGGING=True
ENABLE_DATA_ANONYMIZATION=True
AUDIT_LOG_PATH=./logs/audit/

# Feature Flags
ENABLE_RARE_DISEASE_DETECTION=True
ENABLE_RED_FLAG_ALERTS=True
ENABLE_TEMPORAL_ANALYSIS=True
ENABLE_AI_ASSISTANT=True
