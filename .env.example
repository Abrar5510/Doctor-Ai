# Application Settings
APP_NAME="Medical Symptom Constellation Mapper"
APP_VERSION="0.2.0"
DEBUG=True
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
# IMPORTANT: Generate a secure secret key for production using: openssl rand -hex 32
# Must be at least 32 characters in production (validation enforced)
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (Security)
# Comma-separated list of allowed origins
# IMPORTANT: Do NOT use "*" in production - specify exact domains
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# Rate Limiting (DoS Protection)
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE_MB=10

# Database
# For local development (when running API outside Docker, databases in Docker)
DATABASE_URL=postgresql://doctor_ai:doctor_ai_pass@localhost:5432/doctor_ai
# For Docker Compose (when running API inside Docker)
# DATABASE_URL=postgresql://doctor_ai:doctor_ai_pass@postgres:5432/doctor_ai
DATABASE_ECHO=False

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=medical_conditions

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ML Models
EMBEDDING_MODEL=microsoft/BiomedNLP-PubMedBERT-base-uncased-abstract-fulltext
EMBEDDING_DIMENSION=768
MAX_SEQUENCE_LENGTH=512

# AI Assistant (OpenAI)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Or use local LLM (Ollama)
USE_LOCAL_LLM=False
LOCAL_LLM_MODEL=llama2

# Medical Ontology
USE_SNOMED_CT=True
USE_ICD10=True
USE_HPO=True

# Confidence Thresholds
TIER1_CONFIDENCE_THRESHOLD=0.85
TIER2_CONFIDENCE_THRESHOLD=0.60
TIER3_CONFIDENCE_THRESHOLD=0.40

# Search Parameters
TOP_K_CANDIDATES=50
FINAL_RESULTS_LIMIT=10

# HIPAA Compliance
ENABLE_AUDIT_LOGGING=True
ENABLE_DATA_ANONYMIZATION=True
AUDIT_LOG_PATH=./logs/audit/

# Feature Flags
ENABLE_RARE_DISEASE_DETECTION=True
ENABLE_RED_FLAG_ALERTS=True
ENABLE_TEMPORAL_ANALYSIS=True
ENABLE_AI_ASSISTANT=True
